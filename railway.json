{
  "build": {
    "commands": [
      "pip install -r requirements.txt"
    ]
  },
  "deploy": {
    "startCommand": "uvicorn webhook:app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "ENVIRONMENT": "production"
      }
    }
  }
}
